 # 1.add a task
    # 2.view all tasks
    # 3.mark a task as complete
    # 4.save task to file
    # 5.load tasks when the program starts

tasks =[]

while True:
    print("1. add task")
    print("2. view tasks")
    print("3. exit")

    choice = input("Enter your choice: ")

    if choice=="1":
        task = input("Enter a task: ")
        tasks.append(task)
        print("The task added.")

    elif choice =="2":
        if len(tasks)==0:
            print("ğŸ‘No tasks available")
        else:
            for t in range(len(tasks)):           #len(tasks)- number of tasks 
                print(t+1,".",tasks[t])           #range(2) -> 0,1 

        """
        number =1
        for i in tasks:
            print(number ,".",i)
            number =  number + 1
        """

    else:
        print("Goodbye")
        break   
